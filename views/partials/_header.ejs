<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (!users[userId]) { %>
      <form action="/login" type="text" method="GET" class="float-end">
        <div class="input-group mb-3" style="margin-top: 10px">
          <div>
            <button type="submit" class="btn btn-primary">Login</button>
          </div>
        </div>
      </form>
      <form action="/register" method="GET">
        <div class="input-group mb-3" style="margin-top: 10px">
          <div style="margin-left: 10px">
            <button type="submit" class="btn btn-warning">Register</button>
          </div>
        </div>
      </form>
    <% } else { %>
      <div class="navbar-brand" style="color: rgb(207, 209, 219)">Logged in as: <span style="color:rgb(47, 48, 101)"><%= users[userId].email %></span></div>
      <form action="/logout?_method=PUT" type="button" method="POST" class="float-end">
        <button type="submit" class="btn btn-danger">Logout</button>
      </form>
    <% } %>
  </nav>
</header>